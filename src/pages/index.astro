---
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Felizardo.DEV — Home',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <!-- Content Widget **************** -->
  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-instagram',
        callToAction: {
          target: '_blank',
          text: 'Instagram',
          href: 'https://www.instagram.com/felizardo.dev/',
        },
      },
      {
        icon: 'tabler:brand-linkedin',
        callToAction: {
          target: '_blank',
          text: 'Linkedin',
          href: 'https://www.linkedin.com/in/diogofelizardo/',
        },
      },
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'Github',
          href: 'https://github.com/diogofelizardo',
        },
      },
      
    ]}
    image={{
      src: 'https://avatars.githubusercontent.com/u/13451268?v=4',
      alt: 'Colorful Image',
      loading: 'eager',
    }}
  >
